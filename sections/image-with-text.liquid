<section class="iwt">
    <div class="iwt__width {% if section.settings.iwt_image_width == 'iwt-image-half' %} iwt-width--half {% elsif section.settings.iwt_image_width == 'iwt-image-two-thirds' %} iwt-width--two-thirds {% endif %}
        {% if section.settings.iwt_order == 'iwt_left' %}
            iwt-order--last
        {% elsif section.settings.iwt_order == 'iwt_right' %}
            iwt-order--first
        {% endif %}
        {% if section.settings.iwt_text_align == 'align_left' %}
            iwt-align--left
        {% elsif section.settings.iwt_text_align == 'align_center' %}
            iwt-align--center
        {% elsif section.settings.iwt_text_align == 'align_right' %}
            iwt-align--right
        {% endif %}">
      <h2 class="iwt__heading">{{ section.settings.iwt_heading }}</h2>
      <p class="iwt__text">{{ section.settings.iwt_body_text }}</p>
      {% if section.settings.iwt_button_label != blank %} <a href="{{ section.settings.iwt_button_url }}" class="iwt__btn {% if section.settings.iwt_button_type == 'btn-primary' %} iwt__btn--primary {% elsif section.settings.iwt_button_type == 'btn-secondary' %} iwt__btn--secondary {% endif %}">{{ section.settings.iwt_button_label }}</a> {% endif %}
      {% if section.settings.iwt_button_2_label != blank %} <a href="{{ section.settings.iwt_button_2_url }}" class="iwt__btn {% if section.settings.iwt_button_2_type == 'btn-primary' %} iwt__btn--primary {% elsif section.settings.iwt_button_2_type == 'btn-secondary' %} iwt__btn--secondary {% endif %}">{{ section.settings.iwt_button_2_label }}</a> {% endif %}
    </div>
    <div class="aspect-w-10 aspect-h-{{ section.settings.iwt_image_aspect_mobile | times: 10 | round }} md:aspect-w-10 md:aspect-h-{{ section.settings.iwt_image_aspect | times: 10 | round }} {% if section.settings.iwt_image_width == 'iwt-image-half' %} md:col-span-3 {% elsif section.settings.iwt_image_width == 'iwt-image-two-thirds' %} md:col-span-4 {% endif %}">
      {% if section.settings.iwt_image == blank %}
            {{ 'image' | placeholder_svg_tag: 'svg-placeholder-opacity' }}
        {% else %}
        <img class="iwt__image" src="{{ section.settings.iwt_image | img_url: 'master' }}" alt="{{ shop.name }}>
        {% endif %}

    </div>
</section>

{% schema %}
{
    "name": "Image with text",
    "settings": [
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "image_picker",
            "id": "iwt_image",
            "label": "Image"
        },
        {
            "type": "select",
            "id": "iwt_image_width",
            "label": "Image width",
            "options": [
                {
                    "value": "iwt-image-half",
                    "label": "Half"
                },
                {
                    "value": "iwt-image-two-thirds",
                    "label": "Two thirds"
                }
            ]
        },
        {
            "type": "range",
            "id": "iwt_image_aspect",
            "label": "Aspect ratio",
            "unit": ":1",
            "min": 0.5,
            "max": 1.5,
            "step": 0.1,
            "default": 1
        },
        {
            "type": "range",
            "id": "iwt_image_aspect_mobile",
            "label": "Aspect ratio mobile",
            "unit": ":1",
            "min": 0.5,
            "max": 1.5,
            "step": 0.1,
            "default": 1
        },
        {
            "type": "header",
            "content": "Text"
        },
        {
            "type": "text",
            "id": "iwt_heading",
            "label": "Heading",
            "default": "Heading"
        },
        {
            "type": "text",
            "id": "iwt_body_text",
            "label": "Body text",
            "default": "Text"
        },
        {
            "type": "header",
            "content": "Button 1"
        },
        {
            "type": "select",
            "id": "iwt_button_type",
            "label": "Button type",
            "options": [
                {
                    "value": "btn-primary",
                    "label": "Primary"
                },
                {
                    "value": "btn-secondary",
                    "label": "Secondary"
                }
            ]
        },
        {
            "type": "text",
            "id": "iwt_button_label",
            "label": "Button label",
            "default": "Learn more"
        },
        {
            "type": "url",
            "id": "iwt_button_url",
            "label": "Button link"
        },
        {
            "type": "header",
            "content": "Button 2"
        },
        {
            "type": "select",
            "id": "iwt_button_2_type",
            "label": "Button type",
            "options": [
                {
                    "value": "btn-primary",
                    "label": "Primary"
                },
                {
                    "value": "btn-secondary",
                    "label": "Secondary"
                }
            ]
        },
        {
            "type": "text",
            "id": "iwt_button_2_label",
            "label": "Button label",
            "default": "Learn more"
        },
        {
            "type": "url",
            "id": "iwt_button_2_url",
            "label": "Button link"
        },
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "select",
            "id": "iwt_order",
            "label": "Text position",
            "options": [
                {
                    "value": "iwt_left",
                    "label": "Left of image"
                },
                {
                    "value": "iwt_right",
                    "label": "Right of image"
                }
            ]
        },
        {
            "type": "select",
            "id": "iwt_text_align",
            "label": "Text alignment",
            "options": [
                {
                    "value": "align_left",
                    "label": "Left"
                },
                {
                    "value": "align_center",
                    "label": "Center"
                },
                {
                    "value": "align_right",
                    "label": "Right"
                }
            ]
        }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Image with text"
      }
    ]
}
{% endschema %}