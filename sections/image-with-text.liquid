                    "value": "iwt_left",
                    "label": "Left of image"
                },
                {
                    "value": "iwt_right",
                    "label": "Right of image"
                }
            ]
        },
        {
            "type": "select",
            "id": "iwt_text_align",
            "label": "Text alignment",
            "options": [
                {
                    "value": "align_left",
                    "label": "Left"
                },
                {
                    "value": "align_center",
                    "label": "Center"
                },
                {
                    "value": "align_right",
                    "label": "Right"
                }
            ]
        }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Image with text"
      }
    ]
}
{% endschema %}