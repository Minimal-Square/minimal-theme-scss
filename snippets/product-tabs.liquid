{% if section.blocks.size > 0 %}
<div class="product-tabs addtocart2">
    {% for block in section.blocks %}
        {% if block.type == 'product_tab' %}    
            <div class="product-tabs__block">
                <div class="product-tabs__header clickDropdown">
                    <div class="product-tabs__text-wrapper">
                        <h4 class="product-tabs__heading heading-xs font-medium">{{ block.settings.product_tab_heading }}</h4>
                        <p class="product-tabs__excerpt">{{ block.settings.product_tab_excerpt }}</p>
                    </div>
                    <span aria-hidden="true" class="product-tabs__icon icon icon-chevron-down flex-shrink-0 chevronDesc"></span>
                </div>
                <div class="product-tabs__description hidden dropdownItem">
                    <p class="product-tabs__description-text">{{ block.settings.product_tab_text }}</p>
                </div>
            </div> 
        {% endif %}
    {% endfor %}
</div> 
{% endif %}