    .spr-icon {
        font-size: 75% !important;
        color: var(--clr-product-review-star);
        margin-right: 0.125rem;
    }

    .spr-badge-caption {
        font-size: var(--font-size-body-tiny);
        color: var(--clr-general-text);
        margin-left: 0.125rem;
    }
</style>
