<style>
#slides ul li {
  cursor: pointer;
}


/* Mobile Navmenu */
@media only screen and (min-width: 1024px) {
  #slides{  
    display: none!important;
  }
  #slides .slidesInside{
    display: none!important;
  }
}
@media only screen and (max-width: 1024px) {
  #slides{  
    position:relative;
    overflow-x:hidden;
    margin:0 auto;
    background:white;
    width:100%;
    height:100vh;
    white-space:nowrap;
  }

  #slides .slidesInside{
    position:relative;
    display:inline-block;
    margin-right:-4px;
    white-space:normal;
    vertical-align:top;
    *display:inline;
    background:white;
    width:100%;
    height:100vh;
  }
}

.navmenu-depth-2 {
  background-color: #e8e8e8;
}

</style>

<div id="slides" class="hidden">
      <ul class="py-4">
        {% for link in linklists[section.settings.header_main_menu].links %}
            <li class="relative">
              <div class="flex items-center justify-between px-4">
                <a href="{{ link.url }}" class="py-3.5">{{ link.title }}</a>
                {% if link.links != blank %}
                  <span aria-hidden="true" class="text-2xl icon icon-chevron-down cursor-pointer navDropdown chevronNav"></span>
                {% endif %}
              </div>
              <ul class="navDropItem navmenu-depth-2 hidden">
                {% for child_link in link.links %}
                <li>
                  <div class="flex items-center justify-between px-4">
                    <a href="{{ child_link.url }}" class="py-3.5">{{ child_link.title }}</a>
                    {% if child_link.links != blank %}
                      <span aria-hidden="true" class="text-2xl icon icon-chevron-down cursor-pointer navDropdown chevronNav"></span>
                    {% endif %}
                  </div>
                  
                  {% if child_link.links != blank %}
                  <ul class="grandchild navDropItem hidden space-y-2">
                    {% for grandchild_link in child_link.links %}
                    <li>
                      <a href="{{ grandchild_link.url }}" class="py-3.5 px-6">{{ grandchild_link.title }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </li>
            
        {% endfor %}
      </ul>

      <div class="border-b"></div>

      <div class="space-y-3 py-5 px-4 text-sm">

        <a href="" class="flex items-center justify-between">
          <p>My account</p>  
        </a>

        <a href="" class="flex items-center justify-between">
          <p>USD</p>
        </a>
    
        <a href="" class="flex items-center justify-between">
          <p>Search</p>
        </a>

      </div>

  </div>