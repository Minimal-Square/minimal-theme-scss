<section class="list-collections">
  {% paginate collections by 9 %}
  <div class="list-collections__header">
    <div class="list-collections__breadcrumbs">
      {% include 'breadcrumbs' %}
    </div>
    <div>
      <h1 class="list-collections__heading">{{ page_title }}</h1>
    </div>
  </div>

  <div class="list-collections__content">
    {%- for collection in collections -%}
      {%- if collection.image -%}
        {%- assign collection_image = collection.image -%}
      {%- elsif collection.products.first and collection.products.first.images != empty -%}
        {%- assign collection_image = collection.products.first.featured_image -%}
      {%- else -%}
        {%- assign collection_image = blank -%}
      {%- endif -%}
      {% include 'collection-list-tile' %}

  {%- endfor -%}
  </div>
  {% include 'pagination' %}
  {% endpaginate %}
</section>