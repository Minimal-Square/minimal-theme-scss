
<div class="reset-password">
    {% form 'reset_customer_password' %}

      <div class="reset-password__header">
          <h1 class="reset-password__heading">{{ 'customer.reset_password.title' | t }}</h1>
          <p class="reset-password__text">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
      </div>

      <div class="reset-password__content">

        {% if form.errors %}
          <div class="reset-password__error">
            <span aria-hidden="true" class="icon icon-alert-circle"></span>
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="reset-password__form">
          <div class="reset-password__form__input--first">
            <label for="ResetPassword" class="hidden">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" name="customer[password]" id="ResetPassword" class="reset-password__input {% if form.errors contains 'password' %}input-error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
          </div>
          <div class="reset-password__form__input--second">
            <label for="PasswordConfirmation" class="hidden">{{ 'customer.reset_password.password_confirm' | t }} </label>
            <input type="password" name="customer[password_confirmation]" id="PasswordConfirmation" class="reset-password__input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
          </div>
      </div>

        <input type="submit" class="reset-password__btn" value="{{ 'customer.reset_password.submit' | t }}">
      </div>

    {% endform %}
</div>