<!-- /templates/customers/activate_account.liquid -->
<div class="px-4 md:px-0 max-w-md mx-auto py-32 space-y-12">
  {% form 'activate_customer_password' %}
  <div class="mb-4">
    <h1 class="text-center heading-md clr-general-headings">{{ 'customer.activate_account.title' | t }}</h1>
    <p class="text-center body-md clr-general-text">{{ 'customer.activate_account.subtext' | t }}</p>
  </div>
  {% if form.errors %}
    <div class="text-red-600 rounded-md text-sm w-full py-2 px-4 bg-red-100 flex items-center space-x-2 mb-2">
      <span aria-hidden="true" class="text-lg flex-shrink-0 icon icon-alert-circle"></span>
  {{ form.errors | default_errors }}
  </div>
  {% endif %}
<div class="space-y-2">
  <div class="password">
    <label class="hidden" for="password">{{ 'customer.activate_account.password' | t }}</label>
    <input class="input w-full appearance-none" placeholder="{{ 'customer.activate_account.password' | t }}" type="password" name="customer[password]" />
  </div>
  <div class="password_confirm">
    <label class="hidden" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
    <input class="input w-full appearance-none" placeholder="{{ 'customer.activate_account.password_confirm' | t }}" type="password" name="customer[password_confirmation]" />
  </div>
</div>
  <div class="action_bottom flex space-x-2 mt-4">
    <input class="appearance-none btn-lg btn-primary w-full" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
    <input class="appearance-none btn-lg btn-secondary w-full" type="submit" name="decline" value="{{ 'customer.activate_account.cancel' | t }}" />
  </div>
  {% endform %}
  </div>
  