/* HEADER */

#header li li {
    position: relative;
}
#header ul li:hover .dropdown-menu {
    visibility: visible;
}
  
header, .header {
    transition: all 0.3s ease-out;
}

/* Swatches -> Option */
input[name="add"]:disabled {
    background: #EDEDED;
    cursor: not-allowed;
    color: var(--clr-general-light-text);
} 

#selected {
    background-color: #EDEDED;
}
  
/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
  
/* Firefox */
input[type=number] {
    -moz-appearance: textfield;
}

  .product-option__container button {
    border: 1px solid var(--clr-button-secondary-border);
    color: var(--clr-general-text);
    transition: all 150ms ease-out;
    font-size: var(--body-sm);
    outline: none;
}

.product-option__container button:active {
    border: 1px solid var(--clr-general-links);
    color: var(--clr-general-links);
    transition: all 150ms ease-out;
    box-shadow: 0 0 0 4px rgb(0 0 0 / 10%);
}

/* Outline */
.outline {
    outline: 0;
}

/* Shadows */

.shadow-small {
    filter: drop-shadow(0px 2px 3px rgba(0, 0, 0, 0.06));
}

/* Mobile Navmenu */

#slides{  
position:relative;
overflow-x:hidden;
margin:0 auto;
background:white;
width:100%;
height:100vh;
white-space:nowrap;
}
#slides .slidesInside{ 
position:relative;
display:inline-block;
margin-right:-4px;
white-space:normal;
vertical-align:top;
*display:inline;
background:white;
width:100%;
height:100vh;
}
/* Text selection color */
::-moz-selection { /* Code for Firefox */
    background-color: rgb(230, 230, 230);
  }
  
::selection {
background-color: rgb(238, 238, 238);
}


.chevronDesc, .chevronNav {
  transition: transform .3s ease-in-out;
}

.rotate {
  transform: rotate(180deg);
}
